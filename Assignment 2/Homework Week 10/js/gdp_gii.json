{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "data": {
    "url": "Homework Week 10/data/gdp_gii.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    },
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1000000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Population > Population_Above" },
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "GDP per Capita",
      "type": "quantitative",
      "axis": { "tickCount": 4 },
      "scale": { "type": "log", "domain": [100, 1000000] }
    },
    "y": {
      "field": "Gender Inequality Index",
      "type": "quantitative",
      "axis": { "tickCount": 5 },
      "scale": {"domain": [0,1]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#37b84a",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "value": 0.5
        },
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": { "format": ".1s" }
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          {
            "field": "Gender Inequality Index",
            "type": "quantitative",
            "format": ","
          },
          { "field": "GDP per Capita", "type": "quantitative", "format": "," },
          { "field": "Population", "type": "quantitative", "format": "," }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 0,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] =='Burundi' || datum['Country'] =='Qatar' || datum['Country'] =='India' || datum['Country'] =='United States of America' || datum['Country'] =='Ireland' || datum['Country'] =='Nigeria' ",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          {
            "field": "Gender Inequality Index",
            "type": "quantitative",
            "format": ","
          },
          { "field": "GDP per Capita", "type": "quantitative", "format": "," },
          { "field": "Population", "type": "quantitative", "format": "," }
        ]
      }
    }
  ]
}
